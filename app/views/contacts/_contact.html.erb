
<%= div_for contact, :class => 'row' do %>
<% if contact.receiver.actor.subject_type != "Group" %>
  <div class="logo">

    <%= link_to(image_tag(contact.receiver.logo.url(:contact)),
                contact.receiver_subject) %>
  </div>
  <div class="sub-block">
    <div class="name">
      <%= link_to(truncate_name(contact.receiver_subject.name), contact.receiver_subject, :class => "contact_link") %>
    </div>
    <div class="brief">
      <%= contact_brief(contact.receiver_subject) %>
    </div>
    <div class="link" id="contact_link<%= dom_id(contact.receiver_subject)%>">
      <%= contact_link(contact) %>
    </div>
  </div>
  <div class="close"><%= link_to 'X', contact, :method => :delete, :remote => true %></div>
  <div class="space_center">
  </div>  
  
  
 

  <% end %>
  <% end %>


